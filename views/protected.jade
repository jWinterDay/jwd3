extends layout

block content
    link(rel="stylesheet", href="/libs/jqGrid/src/css/ui.jqgrid.css")
    
    section
        hgroup
            h1 journal
            
        fieldset
            legend journal

            table(id="noteGrid")
            div(id="notePager")

            input(id="csrftoken", type="hidden", value="#{csrftoken}")

    section
        hgroup
            h1 doc
            
        fieldset
            legend doc
            
            p(id="docName")
            div(id="docContainer")

    script(src="/libs/jquery-cookie-1.4.1/jquery.cookie.js")
    script(src="/libs/jqGrid/js/jquery.jqGrid.min.js")
    script(src="/libs/jqGrid/js/i18n/grid.locale-en.js")
    script(src="/scripts/journal.js")